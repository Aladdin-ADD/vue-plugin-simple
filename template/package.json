{
  "name": "{{ name }}",
  "version": "1.0.0",
  "description": "{{ description }}",
  "jsnext": "dist/{{ name }}.js",
  "main": "dist/{{ name }}.common.js",
{{#private}}
  "private": true,
{{/private}}
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "mkdir -p dist && NODE_ENV=production node config/rollup.config.js",
    "dev": "webpack-dev-server --quiet --config config/webpack.dev.config.js --host localhost",
    "lint": "eslint --plugin html **/*.js **/*.vue",
    "test": "npm run lint && npm run unit",
    "unit": "COVERALLS_REPO_TOKEN='{{ coveralls_token }}' karma start config/karma.config.js",
    "clean": "rm -rf dist coverage"
  },
  "author": "{{ author }}",
  "license": "{{ license }}",
  "dependencies": {
    "vue": "latest"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.1",
    "babel-plugin-espower": "^2.1.0",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.4.1",
    "coveralls": "^2.11.6",
    "css-loader": "^0.23.1",
    "es6-promise": "latest",
    "eslint": "^1.10.3",
    "eslint-loader": "^1.2.0",
    "eslint-plugin-html": "^1.2.0",
    "expect.js": "^0.3.1",
    "function-bind": "latest",
    "istanbul-instrumenter-loader": "^0.1.3",
    "karma": "^0.13.19",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^0.5.3",
    "karma-coveralls": "^1.1.2",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^0.2.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.4",
    "mocha-loader": "^0.7.1",
    "phantomjs": "^1.9.19",
    "rollup": "^0.25.1",
    "rollup-plugin-replace": "^1.1.0",
    "rollup-plugin-vue": "^1.0.3",
    "vue-hot-reload-api": "^1.2.2",
    "vue-html-loader": "^1.1.0",
    "vue-loader": "^8.0.3",
    "vue-style-loader": "^1.0.0",
    "vueify-insert-css": "^1.0.0",
    "webpack": "^1.12.12",
    "webpack-dev-server": "^1.14.1"
  }
}
